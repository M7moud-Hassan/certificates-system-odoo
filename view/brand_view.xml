<odoo>
    <data>
        <record id="brand_action" model="ir.actions.act_window">
            <field name="name">Brand</field>
            <field name="res_model">certificate_system.brand</field>
            <field name="view_mode">tree,form,kanban,search,graph</field>
        </record>
         <record id="department_tree_view" model="ir.ui.view">
            <field name="name">Brand tree view</field>
            <field name="model">certificate_system.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <menuitem id="brand" name="brand" sequence="4" parent="certificate_system_menu" action="brand_action"/>
    </data>
</odoo>